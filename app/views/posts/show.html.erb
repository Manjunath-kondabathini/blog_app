<h2><%= @post.title %></h2>
<p><%= @post.content %></p>
<p><small>By <%= @post.user.name %></small></p>

<% if @post.user == current_user %>
  <%= link_to "Edit", edit_post_path(@post) %> |
  <%= link_to "Delete", @post, data: { turbo_method: :delete, confirm: "Are you sure?" } %>
<% end %>

<hr>

<%= render @comments %>

<% if user_signed_in? %>
  <%= render "comments/form", post: @post %>
<% else %>
  <p><%= link_to "Login", new_user_session_path %> to comment.</p>
<% end %>
